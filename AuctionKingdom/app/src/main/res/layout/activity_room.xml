<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 방 생성 -->
    <EditText
        android:id="@+id/create_room_code_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter room code to create" />

    <Button
        android:id="@+id/create_room_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Room" />

    <!-- 방 참여 -->
    <EditText
        android:id="@+id/join_room_code_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter room code to join" />

    <Button
        android:id="@+id/join_room_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join Room" />

    <!-- 방 나가기 -->
    <Button
        android:id="@+id/leave_room_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Leave Room" />

    <!-- 방 목록 -->
    <TextView
        android:id="@+id/rooms_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Rooms" />

    <!-- 사용자가 속한 방 목록 -->
    <TextView
        android:id="@+id/user_rooms_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Your Rooms" />

</LinearLayout>
