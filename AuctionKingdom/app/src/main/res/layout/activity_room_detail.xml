<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RoomDetailActivity">

    <!-- Player 1 정보 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/p1_profile_image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/default_image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/p1_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 1 Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/p1_kingdom_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 1 Kingdom"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/p1_ready_status_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ready/Unready"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Player 2 정보 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/p2_profile_image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/default_image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/p2_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 2 Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/p2_kingdom_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 2 Kingdom"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/p2_ready_status_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ready/Unready"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Leave Room 버튼 -->
    <Button
        android:id="@+id/leave_room_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leave Room"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp" />

    <!-- Toggle Ready 버튼 -->
    <Button
        android:id="@+id/toggle_ready_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toggle Ready"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp" />

    <!-- Match 버튼 -->
    <Button
        android:id="@+id/match_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Match"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp" />

</LinearLayout>
